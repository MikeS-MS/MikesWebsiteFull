@using MikeWebsite.Models
@model List<Comment>


@{
    ViewBag.Title = "Admin Panel";
}

@section Styles{
    @Styles.Render("~/Content/post.css")
    @Styles.Render("~/Content/comments.css")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
}
<div class="post-frame">
    <h1 class="post-text">Comments</h1>
    <div class="post-divider"></div>
    <div id="comments">

        @foreach (var comment in Model)
        {
        <div class="comment-container">
            @using (Html.BeginForm("index", "admin", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.TextBoxFor(m => comment.Id, new { @style = "visibility: hidden; position: fixed; z-index: -9999;", value = comment.Id })
                @Html.TextBoxFor(m => comment.Message, new { @style = "visibility: hidden; position: fixed; z-index: -9999;", value = comment.Message })
            <div class="post-text comment-text">@comment.AuthorUserName - @comment.DateAdded</div>
                <div class="post-divider comment-divider"></div>
                <div class="post-text comment-text comment-content" style="text-transform: none !important;">@comment.Message
                    <br>
                    <br>
                    <input type="submit" class="post-text comment-text delete-button" value="Delete comment" />
                </div>
                
            }
        </div>
        }
    </div>
</div>
