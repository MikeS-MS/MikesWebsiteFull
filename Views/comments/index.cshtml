@using MikeWebsite.Models
@model Comment

@{
    ViewBag.Title = "Comments";
}

@section Styles{
    @Styles.Render("~/Content/post.css");
    @Styles.Render("~/Content/comments.css");
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
}

<div class="post-frame">
    @{
        Html.RenderAction("CommentsBox", "Comments");
    }

    <h1 class="post-text">Leave a Comment</h1>
    <div class="post-divider"></div>
    @using (Html.BeginForm("index", "comments", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.LabelFor(m => m.Message, new { @class = "post-text" })
        @Html.TextBoxFor(m => m.Message)
        @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
        <input type="submit" value="Add comment"/>
    }
    <div class="filling-contact"></div>
</div>